<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="242dp"
        android:layout_margin="@dimen/_4sdp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <!--android:background="@drawable/shadow_round_rect"
-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:elevation="8dp"
            android:layoutDirection="locale"

            android:orientation="vertical"
            android:textDirection="locale">

            <!--<androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="1dp"
                android:layout_height="130dp">-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@mipmap/placeholder"

                /><!--</androidx.cardview.widget.CardView>-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:maxLines="3"
                android:singleLine="false"
                android:text="Graphic design dfddh jkhgjfhgjfhgjfhgjfhgjdbdjdhfgjhgjfjgjfhfhjfhgjfhjgfhjgh"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/_11ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="start"
                android:text="Masterclass"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/_11ssp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvInstructorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/font1"
                android:textDirection="locale"
                android:textSize="@dimen/_9ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="end|bottom"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_4sdp"

                >

                <TextView
                    android:id="@+id/tvOldPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:text="500"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/tvNewPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:text="$500"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>