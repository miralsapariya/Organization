<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:id="@+id/llMain"
    android:layoutDirection="locale"
    android:textDirection="locale"
    android:textAlignment="viewStart"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddUserActivity"
    tools:showIn="@layout/activity_add_user">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgUser"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:src="@mipmap/placeholder"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        app:civ_shadow="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerHorizontal="true"
        app:civ_shadow_color="#00000000"
        app:civ_shadow_radius="4dp" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/first_name"
        android:drawableStart="@mipmap/f_l_name"
        app:backgroundTint="@color/black"
        android:inputType="text"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="@dimen/_14sdp"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:textCursorDrawable="@drawable/custom_cursor"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etLName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/last_name"
        android:drawableStart="@mipmap/f_l_name"
        app:backgroundTint="@color/black"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="@dimen/_14sdp"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:textCursorDrawable="@drawable/custom_cursor"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:textSize="@dimen/_14sdp"
        android:textAlignment="viewStart"
        android:drawableStart="@mipmap/email_add_user"
        android:inputType="textEmailAddress"
        app:backgroundTint="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:gravity="start"
        android:drawablePadding="@dimen/_10sdp"
        android:textCursorDrawable="@drawable/custom_cursor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_arrowColor="@color/black"
                android:layoutDirection="locale"

                app:ccp_contentColor="@color/black"
                app:ccp_flagBorderColor="@color/white"
                android:textDirection="locale"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                app:ccp_showFullName="false"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="true"
                app:ccp_textSize="@dimen/_14sdp"
                app:ccpDialog_textColor="@color/black"
                app:ccpDialog_backgroundColor="@color/white"
                app:ccp_autoDetectCountry="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            android:textSize="@dimen/_14sdp"
            android:drawableStart="@mipmap/phone_number"
            android:inputType="phone"
            android:digits="0123456789"
            android:textAlignment="viewStart"
            android:layoutDirection="locale"
            android:textDirection="locale"
            android:gravity="start"
            app:backgroundTint="@color/black"
            android:layout_marginTop="@dimen/_6sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:textCursorDrawable="@drawable/custom_cursor"
            /></LinearLayout>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:textSize="@dimen/_14sdp"
        android:textAlignment="viewStart"
        android:drawableStart="@mipmap/password_add_user"
        android:inputType="textPassword"
        app:backgroundTint="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:gravity="start"
        android:drawablePadding="@dimen/_10sdp"
        android:textCursorDrawable="@drawable/custom_cursor"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etConfirmPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/confirm_pwd"
        android:textSize="@dimen/_14sdp"
        android:textAlignment="viewStart"
        android:drawableStart="@mipmap/password_add_user"
        android:inputType="textPassword"
        app:backgroundTint="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:gravity="start"
        android:drawablePadding="@dimen/_10sdp"
        android:textCursorDrawable="@drawable/custom_cursor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layoutDirection="locale"
        android:textDirection="locale"
        >
        <TextView
            android:id="@+id/tvRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/role"
            android:text="@string/role"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableEnd="@drawable/ic_down_arrow"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="@dimen/_3sdp"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llAssignment"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="locale"
            android:textDirection="locale"
            >
            <TextView
                android:id="@+id/tvAssignCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/assign_courses"
                android:text="@string/assign_courses"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:singleLine="true"
                android:drawableEnd="@drawable/ic_down_arrow"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="@dimen/_3sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layoutDirection="locale"
        android:textDirection="locale"
        >

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:text="@string/submit"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:textSize="@dimen/_12ssp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/button_grey"
            android:text="@string/reset"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:textSize="@dimen/_12ssp"
            android:layoutDirection="locale"
            android:textDirection="locale"
            />

    </LinearLayout>


</LinearLayout>