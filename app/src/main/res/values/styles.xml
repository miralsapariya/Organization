<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="edittext_grevity">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transperent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transperent</item>
        <item name="android:bottomDark">@color/transperent</item>
        <item name="android:bottomMedium">@color/transperent</item>
        <item name="android:centerBright">@color/transperent</item>
        <item name="android:centerDark">@color/transperent</item>
        <item name="android:centerMedium">@color/transperent</item>
        <item name="android:fullBright">@color/transperent</item>
        <item name="android:fullDark">@color/transperent</item>
        <item name="android:topBright">@color/transperent</item>
        <item name="android:topDark">@color/transperent</item>
    </style>

    <style name="DialogTheme1" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="PopupMenuOverlapAnchor" parent="@style/Theme.AppCompat.Light">
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="DialogTheme" parent="Animation.AppCompat.Dialog">
        <item name="android:itemTextAppearance">@style/DialogTextAppear</item>

    </style>

    <style name="DialogTextAppear" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
    </style>
</resources>
